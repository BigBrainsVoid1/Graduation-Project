WindowManager:
    InventoryScreen:
    SupplierScreen:
    AnalyticsScreen:
    DailyReportScreen:
    ImportExportScreen:

<InventoryScreen>:
    name: 'inventory'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Check Inventory Alerts'
            on_press: root.check_alerts()
        Button:
            text: 'Real-Time RFID Tracking'
            on_press: root.real_time_rfid_tracking()
        Button:
            text: 'Go to Suppliers'
            on_press: app.root.current = 'supplier'
        Button:
            text: 'Generate Analytics Graphs'
            on_press: app.root.current = 'analytics'
        Button:
            text: 'Daily Report'
            on_press: app.root.current = 'daily_report'
        Button:
            text: 'Import/Export Data'
            on_press: app.root.current = 'import_export'

<SupplierScreen>:
    name: 'supplier'
    supplier_name: supplier_name
    supplier_contact: supplier_contact
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Add New Supplier'
        TextInput:
            id: supplier_name
            hint_text: 'Supplier Name'
        TextInput:
            id: supplier_contact
            hint_text: 'Contact Information'
        Button:
            text: 'Add Supplier'
            on_press: root.add_supplier()
        Button:
            text: 'Back to Inventory'
            on_press: app.root.current = 'inventory'

<AnalyticsScreen>:
    name: 'analytics'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Generate Stock Graphs'
            on_press: root.generate_graphs()
        Button:
            text: 'Back to Inventory'
            on_press: app.root.current = 'inventory'

<DailyReportScreen>:
    name: 'daily_report'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Generate Daily Report'
            on_press: root.generate_daily_report()
        Button:
            text: 'Back to Inventory'
            on_press: app.root.current = 'inventory'

<ImportExportScreen>:
    name: 'import_export'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Export Data'
            on_press: root.export_data()
        Button:
            text: 'Import Data'
            on_press: root.import_data()
        Button:
            text: 'Back to Inventory'
            on_press: app.root.current = 'inventory'
