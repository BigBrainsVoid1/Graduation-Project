<LoginScreen>:
    GridLayout:
        cols: 2
        rows: 3
        Label:
            text: "Username"
        TextInput:
            id: username
            multiline: False
        Label:
            text: "Password"
        TextInput:
            id: password
            multiline: False
            password: True
        Button:
            text: "Login"
            on_press: root.login_user()
        Button:
            text: "Register"
            on_press: app.root.current = 'register'

<RegisterScreen>:
    GridLayout:
        cols: 2
        rows: 4
        Label:
            text: "Username"
        TextInput:
            id: reg_username
            multiline: False
        Label:
            text: "Password"
        TextInput:
            id: reg_password
            multiline: False
            password: True
        Button:
            text: "Register"
            on_press: root.register_user()
        Button:
            text: "Back to Login"
            on_press: app.root.current = 'login'

<ManageInventoryScreen>:
    GridLayout:
        cols: 2
        rows: 8
        Label:
            text: "Item Name"
        TextInput:
            id: item_name
            multiline: False
        Label:
            text: "Stock"
        TextInput:
            id: stock
            multiline: False
        Label:
            text: "Condition"
        TextInput:
            id: condition
            multiline: False
        Label:
            text: "RFID Tag"
        TextInput:
            id: rfid_tag
            multiline: False
        Button:
            text: "Add Item"
            on_press: root.add_item()
        Button:
            text: "View Items"
            on_press: root.view_inventory()
        Label:
            text: "Search Inventory"
        TextInput:
            id: search_input
            multiline: False
        Button:
            text: "Search"
            on_press: root.search_item()
        FileChooserIconView:
            on_selection: root.import_items(self.selection[0])
        Button:
            text: "Export Inventory"
            on_press: root.export_items()

<SupplierMarketplaceScreen>:
    GridLayout:
        cols: 1
        rows: 3
        Button:
            text: "Load Suppliers"
            on_press: root.load_suppliers()
        Button:
            text: "Approve Best Supplier"
            on_press: root.approve_best_supplier()
        Button:
            text: "Back to Inventory"
            on_press: app.root.current = 'inventory'

<ReportingScreen>:
    GridLayout:
        cols: 1
        rows: 3
        Button:
            text: "Generate Reports"
            on_press: root.generate_reports()
        Button:
            text: "Print Reports"
            on_press: root.print_report()
        Button:
            text: "Back to Inventory"
            on_press: app.root.current = 'inventory'
